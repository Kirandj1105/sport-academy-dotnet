@{
    ViewData["Title"] = "Coaching2";


}


<style>

    body {
        font-family: 'Arial', sans-serif;
        margin: 0;
        padding: 0;
        background-color: #f4f4f4;
    }

    .header {
        background-color: #333;
        color: #fff;
        padding: 20px;
        text-align: center;
    }

    .row {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        margin: 20px;
        max-width: 1200px; /* Adjust the maximum width as needed */
        margin: 0 auto; /* Center the content */
    }

    .card {
        background-color: #fff;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        margin: 20px;
        padding: 20px;
        border-radius: 8px;
        width: 100%; /* Adjust the width as needed */

        transition: transform 0.2s;
    }

        .card:hover {
            transform: scale(1.02);
        }

    .coaching {
        color: black;
        text-decoration: none;
    }

    #button1 {
        width: 50%;
        border-radius: 5px;
        background-color: lightblue;
    }

        #button1:hover {
            border-radius: 5px;
            background-color: blue;
            cursor: pointer;
        }

    .card-content {
        display: flex;
    }

    .card-column {
        flex: 1;
        padding: 10px;
    }

    .details {
        margin-bottom: 10px;
        color: #555;
    }

    .fakeimg {
        overflow: hidden;
        border-radius: 8px;
    }

    .Img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        border-radius: 8px;
    }

    .footer-margin {
        margin-bottom: 50px;
    }



    .card {
        text-decoration: none;
        color: black;
    }

   


    .facilities-title {
        text-align: center;
    }

</style>

<div>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <div class="header">
        <h2>Athletics</h2>

    </div>


    <div class="row">
        <div class="leftcolumn">


            <div class="card">
                <div class="button-container">
                    <a href="@Url.Action("Coaching", "Home")" class="button1">Go Back</a>
                </div>
                <h2 class='facilities-title'>Athletics Coaching 7 years and above</h2>
                <div class="card-content">
                    <div class="card-column left">
                        <h5 class='details'><b>Campus : </b>CDAC Mumbai Campus</h5>
                        <hr />
                        <p>Athletics 7+ years students training</p>
                        <p>Duration : 15 Feb 2024 to 15 Dec 2024</p>
                        <p>Days of week : Monday To Friday</p>
                        <p>Time Slot : 10 am to 5 pm</p>
                        <hr />
                        <h5>Amenities</h5>
                        <p>Synthetic tracks and gym facilities</p>
                    </div>

                    <div class="card-column right">
                        <div class="fakeimg" style={{ height: '300px' , width: '100%' , overflow: 'hidden' }}>
                            <img src="~/images/basketball.png" class="Img d-block w-100" alt="First slide" />
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
